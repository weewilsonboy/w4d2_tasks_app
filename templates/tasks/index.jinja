{% extends "base.jinja" %} 
{% block content %} 
{% for task in tasks %}
  <div class="task">
    <div class="task__content">
      <div class="task__description">
        <a href="/tasks/{{task.id}}">{{task.description}}</a>
        <span class="task__duration">{{task.duration}} mins</span>

      </div>
      <p class="task__name">{{task.user.first_name}}</p>

      <hr />

      <div class="buttons">
        <form
          class="delete-form"
          action="/tasks/{{task.id}}/delete"
          method="POST"
        >
          <button class="trash-button">
            <i
              class="fa fa-trash-o fa-3x"
              style="color: red"
              aria-hidden="true"
            ></i>
          </button>
        </form>

        {% if task.completed == True %}
        <i class="fa fa-check fa-2x" style="color: green" aria-hidden="true"></i>
        {% else %}
        <i class="fa fa-times fa-2x" aria-hidden="true"></i>
        {% endif %}
      </div>
    </div>
  </div>
{% endfor %} {% endblock %}
